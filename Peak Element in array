#include<iostream>
using namespace std;

int main(){
    int arr[]={1,2,3,4,5,4,3,2};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    if(n==1){
        cout<<-1;
    }
    if (arr[0]>arr[1]){
        cout<<arr[0];
    }
    if (arr[n-1]>arr[n-2]){
        cout<<arr[n-1];
    }
    int low = 1, high=n-2;
    
    while(low<=high){
        int mid=(low+high)/2;
        if(arr[mid]>arr[mid-1]&&arr[mid]>arr[mid+1])
        {
            cout<<arr[mid];
            break;
        }
        else if(arr[mid]>arr[mid-1]&&arr[mid<arr[mid+1]]){
            low=mid+1;
        }
        else{
            high=mid-1;
        }
    }
    return -1;
}
